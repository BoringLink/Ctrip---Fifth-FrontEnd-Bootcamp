{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/home/index",
      "style": { "navigationBarTitleText": "易宿" }
    },
    {
      "path": "pages/search/index",
      "style": { "navigationBarTitleText": "搜索酒店" }
    },
    {
      "path": "pages/hotel/index",
      "style": { "navigationBarTitleText": "酒店详情" }
    },
    {
      "path": "pages/booking/index",
      "style": { "navigationBarTitleText": "填写预订信息" }
    },
    {
      "path": "pages/confirm/index",
      "style": { "navigationBarTitleText": "预订确认", "disableSwipeBack": true }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "white",
    "navigationBarBackgroundColor": "#1677ff",
    "backgroundColor": "#f5f5f5"
  },
  "tabBar": {
    "color": "#999",
    "selectedColor": "#1677ff",
    "backgroundColor": "#fff",
    "list": [
      { "pagePath": "pages/home/index", "text": "首页" },
      { "pagePath": "pages/search/index", "text": "搜索" }
    ]
  }
}
